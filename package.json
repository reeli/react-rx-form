{
  "name": "@react-rx/form",
  "version": "1.0.10",
  "description": "rx form for react, use typescript for development",
  "main": "lib/index.js",
  "module": "module/index.js",
  "types": "src/index.ts",
  "files": [
    "lib",
    "module",
    "src",
    "README.md"
  ],
  "keywords": [
    "react",
    "form",
    "typescript",
    "rx.js"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "webpack-dev-server --config=webpack.config.ts --port=5000 --compress --open --history-api-fallback",
    "release": "rm -rf public/ && NODE_ENV=production webpack --config=webpack.config.ts",
    "deploy": "./script/deploy.sh",
    "test": "tsc --noEmit && jest",
    "build:ts": "rm -rf src/{,**/}*.js && rm -rf lib && rm -rf module && tsc --build ./tsconfig.build.es5.json && tsc --build ./tsconfig.build.es6.json",
    "build:rollup": "rm -rf lib/ && rm -rf module/ && rollup -c rollup.config.ts",
    "prepare": "npm run build:rollup"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --parser typescript --write",
      "tslint --fix",
      "git add"
    ],
    "*.{json}": [
      "prettier --printWidth=120 --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*/__tests__/.+\\.(generator|test|spec)\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "./src/__tests__/helpers/setup.ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "peerDependencies": {
    "react": "16.8.x || 16.9.x",
    "react-dom": "16.8.x || 16.9.x",
    "rxjs": "6.5.x",
    "@emotion/is-prop-valid": "0.8.x",
    "lodash": ">=4.17.13"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@emotion/is-prop-valid": "0.8.2",
    "@material-ui/core": "4.3.2",
    "@material-ui/icons": "4.2.1",
    "@types/axios-mock-adapter": "1.10.0",
    "@types/config": "0.0.34",
    "@types/enzyme": "3.10.3",
    "@types/highlight.js": "9.12.3",
    "@types/html-webpack-plugin": "3.2.1",
    "@types/jest": "24.0.17",
    "@types/lodash": "4.14.137",
    "@types/lodash-es": "4.17.3",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.4",
    "@types/react-redux": "7.1.2",
    "@types/react-router": "5.0.3",
    "@types/react-router-dom": "4.3.4",
    "@types/redux-actions": "2.6.1",
    "@types/redux-logger": "3.0.7",
    "@types/rollup": "0.54.0",
    "@types/terser-webpack-plugin": "1.2.1",
    "axios": "0.19.0",
    "axios-mock-adapter": "1.17.0",
    "babel-plugin-pure-calls-annotation": "0.2.2",
    "config": "3.2.2",
    "css-loader": "3.2.0",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "file-loader": "4.2.0",
    "highlight.js": "9.15.9",
    "html-webpack-plugin": "4.0.0-beta.8",
    "husky": "3.0.4",
    "jest": "24.9.0",
    "lint-staged": "9.2.3",
    "lodash": "4.17.15",
    "lodash-es": "4.17.15",
    "markdown-loader": "5.1.0",
    "prettier": "1.18.2",
    "raw-loader": "3.1.0",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-redux": "7.1.0",
    "react-router": "5.0.1",
    "react-router-dom": "5.0.1",
    "redux": "4.0.4",
    "redux-actions": "2.6.5",
    "redux-logger": "3.0.6",
    "rollup": "1.19.4",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-typescript": "1.0.1",
    "rxjs": "6.5.2",
    "style-loader": "1.0.0",
    "terser-webpack-plugin": "1.4.1",
    "ts-jest": "24.0.2",
    "ts-loader": "6.0.4",
    "ts-node": "8.3.0",
    "tslint": "5.18.0",
    "typescript": "3.5.3",
    "webpack": "4.39.2",
    "webpack-cli": "3.3.7",
    "webpack-dev-server": "3.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:reeli/react-rx-form.git"
  },
  "author": "reeli",
  "license": "ISC",
  "bugs": {
    "url": "git+https://github.com:reeli/react-rx-form.git"
  },
  "homepage": "git+https://github.com:reeli/react-rx-form.git",
  "sideEffects": false,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "tsc --noEmit && npm test"
    }
  }
}

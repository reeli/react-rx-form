{
  "name": "@react-rx/form",
  "version": "1.0.12",
  "description": "rx form for react, use typescript for development",
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "lib",
    "es",
    "dist",
    "README.md"
  ],
  "keywords": [
    "react",
    "form",
    "typescript",
    "rx.js"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "webpack-dev-server --config=webpack.config.ts --port=5000 --compress --open --history-api-fallback",
    "release": "rm -rf public/ && NODE_ENV=production webpack --config=webpack.config.ts",
    "deploy": "./script/deploy.sh",
    "test": "tsc && jest",
    "build:types": "rm -rf dist && tsc --build ./tsconfig.build.types.json",
    "build:ts": "rm -rf src/{,**/}*.js && rm -rf lib && rm -rf es && tsc --build ./tsconfig.build.es5.json && tsc --build ./tsconfig.build.es6.json",
    "build:rollup": "rm -rf lib/ && rm -rf es/ && rollup -c rollup.config.ts",
    "prepare": "npm test && npm run build:types && npm run build:rollup"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --parser typescript --write",
      "tslint --fix",
      "git add"
    ],
    "*.{json}": [
      "prettier --printWidth=120 --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".*/__tests__/.+\\.(generator|test|spec)\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "./src/__tests__/helpers/setup.ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "peerDependencies": {
    "react": ">=16.8.x",
    "react-dom": ">=16.8.x",
    "rxjs": ">=6.5.x",
    "@emotion/is-prop-valid": ">=0.8.x",
    "lodash": ">=4.17.15"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@emotion/is-prop-valid": "0.8.2",
    "@material-ui/core": "4.11.1",
    "@material-ui/icons": "4.9.1",
    "@types/axios-mock-adapter": "1.10.0",
    "@types/config": "0.0.37",
    "@types/enzyme": "3.10.8",
    "@types/highlight.js": "9.12.4",
    "@types/html-webpack-plugin": "3.2.3",
    "@types/jest": "26.0.12",
    "@types/lodash": "4.14.161",
    "@types/lodash-es": "4.17.3",
    "@types/react": "16.9.49",
    "@types/react-dom": "16.9.8",
    "@types/react-redux": "7.1.9",
    "@types/react-router": "5.1.8",
    "@types/react-router-dom": "5.1.5",
    "@types/redux-actions": "2.6.1",
    "@types/redux-logger": "3.0.8",
    "@types/rollup": "0.54.0",
    "@types/terser-webpack-plugin": "4.2.0",
    "axios": "0.20.0",
    "axios-mock-adapter": "1.18.2",
    "babel-plugin-pure-calls-annotation": "0.3.1",
    "config": "3.3.3",
    "css-loader": "4.3.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.5",
    "file-loader": "6.1.0",
    "highlight.js": "10.4.0",
    "husky": "4.3.0",
    "html-webpack-plugin": "4.5.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.2",
    "lodash": "4.17.20",
    "lodash-es": "4.17.15",
    "prettier": "2.2.1",
    "markdown-loader": "6.0.0",
    "raw-loader": "4.0.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-redux": "7.2.1",
    "react-router": "5.2.0",
    "react-router-dom": "5.2.0",
    "redux": "4.0.5",
    "redux-actions": "2.6.5",
    "redux-logger": "3.0.6",
    "rollup": "2.33.3",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-typescript": "1.0.1",
    "rxjs": "6.6.3",
    "style-loader": "1.3.0",
    "terser-webpack-plugin": "4.2.3",
    "ts-jest": "26.4.4",
    "ts-loader": "8.0.3",
    "ts-loader": "8.0.11",
    "ts-node": "9.0.0",
    "tslint": "6.1.3",
    "typescript": "4.0.2",
    "webpack": "4.44.2",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:reeli/react-rx-form.git"
  },
  "author": "reeli",
  "license": "ISC",
  "bugs": {
    "url": "git+https://github.com:reeli/react-rx-form.git"
  },
  "homepage": "git+https://github.com:reeli/react-rx-form.git",
  "sideEffects": false,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  }
}

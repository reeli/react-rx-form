{
  "name": "@reeli/react-rx-form",
  "version": "0.3.8",
  "description": "rx form for react, use typescript for development",
  "main": "lib/index.js",
  "module": "module/index.js",
  "types": "module/index.d.ts",
  "files": [
    "lib",
    "module",
    "README.md"
  ],
  "keywords": [
    "react",
    "form",
    "typescript",
    "rx.js"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "webpack-dev-server --config=webpack.config.ts --port=9000 --compress --open --history-api-fallback",
    "release": "rm -rf public/ && NODE_ENV=production webpack --config=webpack.config.ts",
    "deploy": "./script/deploy.sh",
    "test": "jest",
    "precommit": "lint-staged",
    "prepush": "tsc --noEmit && npm test",
    "prepare": "rm -rf src/{,**/}*.js && rm -rf lib && rm -rf module && tsc --build ./tsconfig.build.es5.json && tsc --build ./tsconfig.build.es6.json"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --parser typescript --write",
      "tslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --printWidth=120 --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": "((\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "./src/__tests__/helpers/setup.ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**/*.{ts,tsx}",
      "!**/src/__tests__/helpers/**"
    ],
    "coverageReporters": [
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "coveragePathIgnorePatterns": [
      ".*\\.d\\.ts",
      "<rootDir>/node_modules/"
    ]
  },
  "dependencies": {
    "@types/lodash": "4.14.116",
    "@types/react-dom": "16.0.7",
    "lodash": "4.17.10",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "rxjs": "6.3.1"
  },
  "devDependencies": {
    "@material-ui/core": "3.0.2",
    "@material-ui/icons": "3.0.1",
    "@types/axios-mock-adapter": "1.10.0",
    "@types/config": "0.0.34",
    "@types/enzyme": "3.1.13",
    "@types/highlight.js": "9.12.3",
    "@types/html-webpack-plugin": "3.2.0",
    "@types/jest": "23.3.1",
    "@types/react-redux": "6.0.6",
    "@types/react-router": "4.0.30",
    "@types/react-router-dom": "4.3.0",
    "@types/redux-actions": "2.3.0",
    "@types/redux-logger": "3.0.6",
    "@types/uglifyjs-webpack-plugin": "1.1.0",
    "axios": "0.18.0",
    "axios-mock-adapter": "1.15.0",
    "config": "2.0.1",
    "css-loader": "1.0.0",
    "enzyme": "3.5.1",
    "enzyme-adapter-react-16": "1.3.1",
    "file-loader": "2.0.0",
    "highlight.js": "9.12.0",
    "html-webpack-plugin": "4.0.0-alpha",
    "husky": "0.14.3",
    "jest": "23.5.0",
    "lint-staged": "7.2.2",
    "markdown-loader": "4.0.0",
    "prettier": "1.14.2",
    "raw-loader": "0.5.1",
    "react-redux": "5.0.7",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "redux": "4.0.0",
    "redux-actions": "2.6.1",
    "redux-logger": "3.0.6",
    "style-loader": "0.23.0",
    "ts-jest": "23.1.4",
    "ts-loader": "5.0.0",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "typescript": "3.0.3",
    "uglifyjs-webpack-plugin": "1.3.0",
    "webpack": "4.17.2",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "3.1.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:reeli/react-rx-form.git"
  },
  "author": "reeli",
  "license": "ISC",
  "bugs": {
    "url": "git+https://github.com:reeli/react-rx-form.git"
  },
  "homepage": "git+https://github.com:reeli/react-rx-form.git"
}
